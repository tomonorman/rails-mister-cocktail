<div class="container">
  <h1>Add an ingredient to <%= @cocktail.name %></h1>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient, input_html: { class: 'select2' } %>
    <%= f.submit "Add", class: "btn btn-success" %>
  <% end %>
</div>